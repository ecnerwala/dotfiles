# exit i3 (logs you out of your X session)
bindsym $mod+Shift+E exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

#lock screen
bindsym $mod+Escape exec --no-startup-id i3lock -c 202020 && xset dpms force off
#bindsym $mod+Escape exec --no-startup-id xset dpms force off

# resize window (you can also use the mouse for that)
mode "resize" {
	# These bindings trigger as soon as you enter the resize mode

	# Pressing left will shrink the window’s width.
	# Pressing right will grow the window’s width.
	# Pressing up will shrink the window’s height.
	# Pressing down will grow the window’s height.
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt
	bindsym Shift+H resize shrink width 1 px or 1 ppt
	bindsym Shift+J resize grow height 1 px or 1 ppt
	bindsym Shift+K resize shrink height 1 px or 1 ppt
	bindsym Shift+L resize grow width 1 px or 1 ppt

	# same bindings, but for the arrow keys
	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt
	bindsym Shift+Left resize shrink width 1 px or 1 ppt
	bindsym Shift+Down resize grow height 1 px or 1 ppt
	bindsym Shift+Up resize shrink height 1 px or 1 ppt
	bindsym Shift+Right resize grow width 1 px or 1 ppt

	# back to normal: Enter or Escape
	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Mark support
bindsym $mod+m exec --no-startup-id i3-input -F 'mark %s' -l 1 -P 'Mark: '
bindsym $mod+Shift+M exec --no-startup-id i3-input -F 'mark %s' -P 'Mark: '
bindsym $mod+Ctrl+m exec --no-startup-id i3-input -F 'unmark %s' -P 'Unmark: '
bindsym $mod+apostrophe exec --no-startup-id i3-input -F '[con_mark="%s"] focus' -l 1 -P 'Go to: '
bindsym $mod+Shift+quotedbl exec --no-startup-id i3-input -F '[con_mark="%s"] focus' -P 'Go to: '

bindsym $mod+period exec --no-startup-id dunstctl close
bindsym $mod+Ctrl+period exec --no-startup-id dunstctl close-all
bindsym $mod+comma exec --no-startup-id dunstctl history-pop
bindsym $mod+Shift+period exec --no-startup-id dunstctl context

