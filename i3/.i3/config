# clientclass border backgr. text indicator
client.focused $custom $custom $baseB3 $green
client.focused_inactive $baseA2 $baseA2 $baseB2 $green
client.unfocused $baseA3 $baseA3 $baseB1 $green
client.urgent $red $red $baseB3 $green

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    colors {
        background $baseA3
        statusline $baseB3
        separator $baseB1

        focused_workspace  $custom $custom $baseB3
        active_workspace   $baseA2 $custom $baseB1
        inactive_workspace $baseA3 $baseA3 $baseB1
        urgent_workspace   $red $red $baseB3
    }

	status_command i3status
	tray_output primary
	#status_command conky
}
